<h1 class="i-sidebar-title h4 mt-4">
	<img class="i-sidebar-logo mr-2" src="{{logo}}" height="40" alt="Logo">
	{{name}}
</h1>

<form class="relative mt-2 mb-2 px-0">
	<div class="i-search-input">
		<input id="search-filter" name="filter" type="search" placeholder="Search" class="form-control i-sidebar-item-filter">
		<label for="search-filter" class="search-input-icon fa fa-search i-muted"></label>
		<button type="button" class="i-search-input-reset" aria-label="Clear">
			<i class="fa fa-remove fa-lg"></i>
		</button>
	</div>
</form>

{{#each groups}}
	<div class="i-sidebar-list-group">

		<h5
			class="text-white pt-4 mb-1"
			data-filter-value="{{#each docs}} {{name}} {{/each}}"
		>
			<b>{{key}}</b>
		</h5>

		<div>
			{{#each docs}}
				<a
					href="#{{slug}}"
					class="i-sidebar-list-item text-white"
					data-filter-value="{{name}}"
				>
					<span>{{name}}</span>
				</a>
			{{/each}}
		</div>

	</div>
{{/each}}

<div class="i-sidebar-filter-no-results i-muted i-pad-horiz-2">
	No matches.
</div>

<div class="row no-gutters mt-auto pt-3 pb-2">
	<span class="col">
		<span class="text-white i-muted">by</span>
		<a class="text-white i-muted -hover" href="https://github.com/mpetrovich/stylemark">Stylemark</a>
	</span>
</div>
